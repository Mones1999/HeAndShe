@model IEnumerable<Shoppingcart>



@if (Model.Count() == 0)
{
    <div class="text-center">
        <h1 style="color:#dadada"><i class="icon-shopping-cart"></i></h1>
        <span style="color:#dadada">Cart is empty</span>
    </div>
     
}
@foreach (var item in Model)
{
    <div class="product">
        <div class="product-cart-details">
            <h4 class="product-title">
                <a href="@Url.Action("ProductDetails", "Home", new { id = item.Product.Productid })">@item.Product.Productname</a>
            </h4>
            <span class="cart-product-info">
                <span class="cart-product-qty">@item.Quantity</span>
                x @item.Product.Price @ViewBag.CurrencyCode
            </span>
        </div>
        <figure class="product-image-container">
            <a class="product-image">
                <img src="@Url.Content("~/Images/" + @item.Product.Imageurl) " alt="product">
            </a>
        </figure>
        <a href="@Url.Action("RemoveFromCart", "Cart", new { cartId = item.Cartid })" class="btn-remove" title="Remove Product"><i class="icon-close"></i></a>
    </div>
}


