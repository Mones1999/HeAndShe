@model IEnumerable<Review>
@{
    ViewData["Title"] = $"{ViewBag.UserName} Reviews";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<head>
    <script src="https://kit.fontawesome.com/4c8029d6be.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />
    <style>
        .dt-button {
            background-color: #0d6efd !important;
            color: white !important;
            border: none !important;
        }

        table.dataTable.no-footer {
            border: none !important;
        }
    </style>
</head>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.UserName Reviews</h1>
            </div>
        </div>
        <div class="row mt-4">

            <div class="col-12 col-md-4">
                <div class="callout callout-info">
                    <strong>Total Reviews: @Model.Count()</strong>
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- /.card -->

                <div class="card shadow-none">

                    <!-- /.card-header -->
                    <div class="card-body">
                        @if (Model.Count() == 0)
                        {
                            <span>No Reviews</span>
                        }
                        else
                        {
                            <table id="example" class="table table-bordered text-center table-striped">
                                <thead>
                                    <tr>
                                        <th>Product name</th>
                                        <th>Review content</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var review in Model)
                                    {
                                        <tr>
                                            <td>
                                                @review.Product.Productname
                                            </td>

                                            <td>@review.Reviewtext</td>
                                            <td><a asp-action="DeleteReview" asp-route-id="@review.Reviewid" class="btn btn-danger">Delete </a></td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                        }
                        <a asp-action="userProfile" asp-route-userId="@ViewBag.UserId" class="btn btn-primary">Go Back</a>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- DataTables  & Plugins -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>

    $(document).ready(function () {
        $('#example').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });

</script>
@if (TempData["SuccessMessage"] != null)
{
<script>
    Swal.fire({
        icon: 'success',
        title: 'Done',
        text: '@TempData["SuccessMessage"]',
    })
</script>
}
else if (TempData["ErrorMessage"] != null){

    <script>
        Swal.fire({
            icon: 'errorr',
            title: 'Oops..',
            text: '@TempData["ErrorMessage"]',
        })
    </script>
}