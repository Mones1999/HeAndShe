@model Category
@{
    ViewData["Title"] = "CategoryDetails";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container-fluid pt-3">

    <div class="row">
        <div class="col-12">
            <form asp-action="EditCategory" method="post">
                <input type="hidden" asp-for="Categoryid" value="@Model.Categoryid" />
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Category details</h3>
                    </div>
                    <div class="card-body">

                        <div class="input-group mb-3">
                            <input asp-for="Categoryname" value="@Model.Categoryname" type="text" class="form-control" placeholder="Category name">
                        </div>

                        <div class="form-group">
                            <label>Select gender: </label>
                            <select asp-for="Genderid" asp-items="ViewBag.Genderid" class="form-control">
                            </select>
                        </div>

                        <div class="form-group">

                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>

                        <!-- /input-group -->
                    </div>
                    <!-- /.card-body -->
                </div>
            </form>
            <a class="btn btn-primary" asp-action="ProductsReport">Back</a>
        </div>

    </div>
</div>

