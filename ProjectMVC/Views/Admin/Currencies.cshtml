@model IEnumerable<Currency>
@{
    ViewData["Title"] = "Currencies";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Currncies</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>Currncy name</th>
                                <th>Currncy code</th>
                                <th>Exchange to base</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                
                                <tr>
                                    <td>@item.Currencyname</td>
                                    <td>@item.Currencycode</td>
                                    <td>@item.Exchangetobase</td>
                                    <td>
                                        <a asp-action="EditCurrency" asp-route-id="@item.Currencyid" class="btn btn-primary">Edit</a>
                                        <a asp-action="DeleteCurrency" asp-route-id="@item.Currencyid" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                    
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <a asp-action="AddCurrency" class="btn btn-primary">Add new currncy</a>
        </div>
    </div>
</div>

